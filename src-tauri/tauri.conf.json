{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Anvel",
  "version": "0.4.3",
  "identifier": "com.anvel.app",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "withGlobalTauri": false,
    "windows": [
      {
        "label": "main",
        "title": "Anvel",
        "width": 1000,
        "height": 600
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "createUpdaterArtifacts": "v1Compatible"
  },
  "plugins": {
    "updater": {
      "windows": {
        "installMode": "passive"
      },
      "active": true,
      "endpoints": [
        "https://raw.githubusercontent.com/imrany/anvel/main/updater.json"
      ],
      "dialog": true,
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDM5N0Q5QTU4OENGM0MzMkYKUldRdncvT01XSnA5T2FhZjlCbVg5b0toMXNqNHRBOFF6dmRqT3A2UU8xeWpxQ3cxTkVxR0ROSG8K"
    },
    "fs": {
      "requireLiteralLeadingDot": false
    },
    "opener": {
      "requireLiteralLeadingDot": false
    }
  }
}
